
<div class="row">
  <div class="input_section">
    <%= form_for('details',class: "input_form" ,url: '/details') do |f| %>
      
      <div class="form-group">
      <%= f.label :age %>
      <%= f.text_field :age  %>
    </div>
      
      <div class="form-group">
      <%= f.label :state %>
      <%= f.text_field :state %>
    </div>

      <div class="form-group">
      <%= f.label :city %>
      <%= f.text_field :city %>
    </div>

      <div class="form-group">
      <%= f.label :gender %>
      <%= f.text_field :gender%>
    </div>

      <div class="form-group">
      <%= f.label :income  %>
      <%= f.text_field :income, placeholder:'income estimate in numbers'%>
    </div>
      
      <div class="form-submit">
      <%= f.submit "Get details" %>
    <% end %>
  </div>
</div>