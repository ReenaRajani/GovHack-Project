
<div class="row">
  <div class="input_section">
    <%= form_for('details',class:"input_form" ,url: '/details') do |f| %>
      
      <div class="form-group">
      <%= f.label :age %>
      <%= f.text_field :age  %>
    </div>
      
      <div class="form-group">
      <%= f.label :gender %>
      <%= f.text_field :gender %>
    </div>

      <div class="form-group">
      <%= f.label :state %>
      <%= f.text_field :state %>
    </div>

      <div class="form-group">
      <%= f.label :region %>
      <%= f.text_field :region , placeholder: 'you would like to live at ? ' %>
    </div>
      
      <div class="form-submit">
      <%= f.submit "Get details", class:'form_submit' %>
    <% end %>

  </div>
  
</div>